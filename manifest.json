{
    "manifest_version": 2,
    "name": "E-Book Scraper",
    "version": "1.0",    
    "description": "...",
    "homepage_url": "https://github.com/itamardag/EBookScraper",
    "icons": {
        "64": "icons/e-book-icon-64.png"
    },

    "permissions": [
        "activeTab",
        "downloads",
        "<all_urls>"
    ],

    "browser_action": {
        "default_icon": "icons/e-book-icon-32.png",
        "default_title": "E-Book Scraper",
        "default_popup": "popup/choose_elements.html"
    },

    "background": {
        "scripts": [ "background_scripts/download_ebook.js" ]
    }
}